{
  "name": "digitalTwin",
  "description": "digitalTwin to protect your data!",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": "logo.png"
  },
  "permissions": ["activeTab", "scripting", "tabs", "notifications", "storage"],
  "background": {
    "service_worker": "src/background/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/ui/pii-highlighter.js", "src/detection/regex-patterns.js", "src/detection/pii-detector.js", "src/content/content.js"],
      "css": ["src/ui/pii-highlighter.css"],
      "run_at": "document_idle"
    }
  ]
}